extends ../layout/admin

block styles
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
    meta(name="csrf-token" content= csrfToken)

block contenido
    div.py-10 
        h1.text-4xl.my-10.font-extrabold.text-center Anuncia
            span.font-normal Propiedades
        h2.text-center.text-2xl.font-bold= pageName

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form(id="imagen" class="dropzone  border-dashed border-2 w-full min:h-96 rounded flex-col justify-center items-center" method="POST" action=`/propiedades/agregar-imagen/${propiedad.id}`)
                input(type='hidden' name='_csrf' value= csrfToken)
            button(id="publicar" class="mt-5 w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer uppercase" type="button") Publicar Propiedad

block scripts
    script(src="/js/agregarImagen.js")
    