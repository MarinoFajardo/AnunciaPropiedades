extends ../layout/index

block contenido
    div.py-10 
        h1.text-4xl.my-10.font-extrabold.text-center Anuncia
            span.font-normal Propiedades
        h2.text-center.text-2xl.font-bold= pageName

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-2(method="POST" action="/auth/olvide-password")
                    input(type='hidden' name='_csrf' value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email
                        input#email.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Introduce tu Email" type="email" name="email")
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión 
                        a.text-gray-500.text-xs(href="/auth/register") ¿Aún no tienes una cuenta? Crear Cuenta

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Recordar Contraseña")